{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": { "draftAndPublish": false },
  "attributes": {
    "term_id": { "type": "integer", "unique": true, "required": true },
    "category_name": { "type": "string", "required": true },
    "category_slug": { "type": "uid", "targetField": "category_name", "required": true, "unique": true },
    "category_text": { "type": "text"},
    "category_image": { "type": "media", "multiple": false, "required": false, "allowedTypes": ["images"] },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parent"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "categories"
    }
  }
}