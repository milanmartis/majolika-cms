{
    "kind": "collectionType",
    "collectionName": "autors",
    "info": {
      "singularName": "autor",
      "pluralName": "autors",
      "displayName": "Autor"
    },
    "pluginOptions": {
      "i18n": {
        "localized": true
      }
    },
    "options": { "draftAndPublish": true },
    "attributes": {
      "meno": { "type": "string", "required": true },
      "pozicia": { "type": "string", "required": true },
      "rola": {
        "type": "enumeration",
        "enum": [
          "administratíva",
          "maliar",
          "džbánkár",
          "majster výroby"
        ],
        "default": "administratíva",
        "required": true
      },
      "poradie": { "type": "integer", "required": false },
      "email": { "type": "email", "required": false, "unique": true },
      "telefon": { "type": "string", "required": false, "unique": true },
      "bio": { "type": "text" },
      "produkty": {
        "type": "relation",
        "relation": "oneToMany",
        "target": "api::product.product",
        "mappedBy": "autor"
      },
      "fotografia": {
        "type": "media",
        "multiple": false,
        "required": false,
        "allowedTypes": ["images"]
      }
    }
  }