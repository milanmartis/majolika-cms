{
    "kind": "collectionType",
    "collectionName": "autors",
    "info": {
      "singularName": "autor",
      "pluralName": "autors",
      "displayName": "Autor"
    },
    "options": { "draftAndPublish": true },
    "attributes": {
      "meno": { "type": "string", "required": true },
      "pozicia": { "type": "string", "required": true },
      "email": { "type": "email", "required": false, "unique": true },
      "telefon": { "type": "string", "required": false, "unique": true },
      "bio": { "type": "text" },
      "produkty": {
        "type": "relation",
        "relation": "oneToMany",
        "target": "api::product.product",
        "mappedBy": "autor"
      },
      "fotografia": {
        "type": "media",
        "multiple": false,
        "required": false,
        "allowedTypes": ["images"]
      }
    }
  }