{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Objedn√°vky"
  },
  "options": { "draftAndPublish": false, "timestamps": true },
  "attributes": {
    "customerName": { "type": "string", "required": true },
    "customerEmail": { "type": "email", "required": true },

    "shippingAddress": { "type": "json", "required": true },

    "total": { "type": "decimal", "required": true },
    "shippingFee": { "type": "decimal", "default": 0 },
    "totalWithShipping": { "type": "decimal", "default": 0 },

    "status": { "type": "string", "default": "pending" },

    "items": {
      "type": "component",
      "repeatable": true,
      "component": "order.item"
    },

    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders",
      "required": true
    },

    "paymentMethod": {
      "type": "enumeration",
      "enum": ["card", "cod", "bank", "onsite", "post"],
      "required": true,
      "default": "card"
    },
    "paymentSessionId": { "type": "string" },

    "paymentStatus": {
      "type": "enumeration",
      "enum": ["unpaid", "pending", "paid", "refunded", "failed"],
      "default": "unpaid",
      "required": false
    },

    "fulfillmentStatus": {
      "type": "enumeration",
      "enum": ["new", "processing", "packed", "shipped", "ready_for_pickup", "completed", "cancelled"],
      "default": "new",
      "required": false
    },

    "deliveryStatus": {
      "type": "enumeration",
      "enum": ["label_created", "in_transit", "at_pickup", "delivered", "returned"],
      "required": false
    },

    "deliveryMethod": {
      "type": "enumeration",
      "enum": ["pickup", "post_office", "packeta_box", "post_courier"],
      "required": true,
      "default": "pickup"
    },
    "deliveryAddress": {
      "type": "component",
      "repeatable": false,
      "component": "shared.address"
    },
    "deliveryDetails": {
      "type": "component",
      "repeatable": false,
      "component": "checkout.delivery-details"
    },

    "parcelWeightKg": { "type": "decimal", "precision": 6, "scale": 2 },
    "packetaShipmentId": { "type": "string" },
    "packetaTrackingNumber": { "type": "string" },
    "packetaLabelUrl": { "type": "text" },
    "packetaStatus": { "type": "string" },

    "temporaryId": { "type": "string" }
  }
}
